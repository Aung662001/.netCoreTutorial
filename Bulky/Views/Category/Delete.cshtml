@model Category;

<form class="border-1 border-secondary" method="post">
	<input type="number" asp-for="Id" hidden />
	<div class="row border-bottom mb-4"><h4>Delete Category</h4></div>
	@* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
	<div class="row mb-3">
		<label asp-for="Name" class="p-0"></label>
		<input asp-for="Name" type="text" class="p-1 form-control" disabled/>
	</div>
	<div class="row mb-3">
		<label asp-for="DispleyOrder" class="p-0"></label>
		<input asp-for="DispleyOrder" type="number" min="1" class="p-1 form-control" disabled/>
	</div>
	<div class="row">
		<div class="col-6 col-md-3 p-0">
			<button type="submit" class="btn btn-danger form-control rounded-0">Delete</button>
		</div>
		<div class="col-6 col-md-3 p-0">
			<a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control rounded-0">Back To Category</a>
		</div>
	</div>
</form>
